<div class="row">
    <div class="col-12">
        <div class="row">
            <div class="col-6 introBtn" v-on:click="GetOtherRoute('newPerson')">
                <h3><img src="images/icon_01.png" alt="新人獎簡章">新人獎簡章</h3>
            </div>
            <div class="col-6 introBtn" v-on:click="GetOtherRoute('introData')">
                <h3><img src="images/icon_02.png" alt="印象大獎簡章">印象大獎簡章</h3>
            </div>
            <div class="col-6 introBtn" v-on:click="GetOtherRoute('signUp')">
                <h3><img src="images/icon_03.png" alt="線上報名">線上報名</h3>
            </div>
            <div class="col-6 introBtn" v-on:click="GetOtherRoute('login')">
                <h3><img src="images/icon_04.png" alt="報名查詢">報名查詢</h3>
            </div>
        </div>
    </div>
</div>

<script type="text/javascript">
    @section Vue
    {

    const app = Vue.createApp({
        methods: {
            GetOtherRoute: function (RouteState) {
                console.log(RouteState)
                try {
                    switch (RouteState) {
                        case 'newPerson':
                            window.location.href = '@Url.Action("NewPersonIntroData", "ArtRoute")';
                            break;
                        case 'introData':
                            window.location.href = '@Url.Action("IntroData", "ArtRoute")';
                            break;
                        case 'signUp':
                            window.location.href = '@Url.Action("SignUp", "ArtRoute")';
                            break;
                        case 'login':
                            window.location.href = '@Url.Action("SignUpQuery", "ArtRoute")';
                            break;
                        default:
                            window.location.href = '@Url.Action("Index", "ArtRoute")';
                    }
                }
                catch (exception) {
                    console.log(exception);
                }
            }
        }
    })


    }
</script>
